{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2022",
    "typeRoots": [
      "node_modules/@types"
    ],

    "lib": [
      "es2022",
      "dom"
    ],
    "paths": {
      "rt-auto-focus": [
        "dist/rt-auto-focus"
      ],
      "rt-define-stroke-width": [
        "dist/rt-define-stroke-width"
      ],
      "rt-tab-carousel": [
        "dist/rt-tab-carousel"
      ],
      "rt-is-visible-element": [
        "dist/rt-is-visible-element"
      ],
      "rt-overflow-tooltip": [
        "dist/rt-overflow-tooltip"
      ],
      "rt-platform": [
        "dist/rt-platform"
      ],
      "rt-query-params-router-link": [
        "dist/rt-query-params-router-link"
      ],
      "rt-table-moving": [
        "dist/rt-table-moving"
      ],
      "rt-skeleton": [
        "dist/rt-skeleton"
      ],
      "rt-virtual-scroll": [
        "dist/rt-virtual-scroll"
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "include": [
    "src",
    "node_modules/cypress"
  ],
  "exclude": [
    "node_modules/cypress"
  ]
}
